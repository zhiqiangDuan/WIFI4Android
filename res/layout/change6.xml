<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	    <RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/text1"
			    android:text="转把模式选择1"
			    android:textSize="20sp" />
			 <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:text="柔和" />
                <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/radioGroup2"
                android:checked="true"
                android:text="线性" />

            </RadioGroup>

		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:text="转把模式选择2"
			    android:textSize="20sp" />
			 <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

			     <RadioButton
			         android:id="@+id/radio1"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:text="扭矩型" />

                <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/radioGroup2"
                android:checked="true"
                android:text="速度型" />

            </RadioGroup>

		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "0~4.3V                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text3"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text3"
			    android:text="转把上限故障值"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "0~4.3V                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text4"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text4"
			    android:text="转把上限故障退出值"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "0~4.3V                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text5"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text5"
			    android:text="转把下限故障值"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "0~4.3V                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text6"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text6"
			    android:text="转把下限故障退出值 "
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "0~4.3V                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text7"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text7"
			    android:text="转把最高有效值"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "0~4.3V                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text7"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text7"
			    android:text="转把最低有效值"
			    android:textSize="20sp" />
		</RelativeLayout>
	   <Button android:id="@+id/butOK"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="确定"/>
	</LinearLayout>
</LinearLayout>
