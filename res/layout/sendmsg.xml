<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/mScrollView" 
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content" 
    android:scrollbars="vertical" >

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout 
        android:id = "@+id/clientLayout"
        android:layout_marginTop="5dip" 
		android:layout_width="match_parent" 		
		android:layout_height="wrap_content" 
		android:orientation="vertical">
	    <TextView 
	        android:id = "@+id/clientText"
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:text="手机扮演客户端："/>	        
	    <RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			   
			<Button android:id="@+id/connectButton"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 				
				android:layout_alignParentRight = "true"
				android:text="开始连接"/>
			<EditText
		         android:layout_width="fill_parent"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "请输入IP地址"		      	 
		      	 android:layout_alignParentLeft = "true"
		      	 android:layout_toLeftOf="@+id/connectButton" 
		      	 android:id = "@+id/ipText"/>
		</RelativeLayout> 		
		
		<RelativeLayout 
	        android:id = "@+id/sendLayout"
	        android:layout_below="@+id/connectLayout"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			   
			<Button android:id="@+id/sendButton"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_alignParentRight = "true"
				android:text="发送信息"/>
			<EditText
		         android:layout_width="fill_parent"
		      	 android:layout_height = "wrap_content" 	
		      	 android:layout_alignParentLeft = "true"
		      	 android:layout_toLeftOf="@+id/sendButton" 
		      	 android:hint = "请输入发送内容"
		      	 android:id = "@+id/sendMsg"/>  
		</RelativeLayout>
	</RelativeLayout> 

	<TextView
			android:id="@+id/recvMsg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom = "true"
			android:textSize="25sp"
			android:text="信息：\n"/>
</LinearLayout>
</ScrollView>