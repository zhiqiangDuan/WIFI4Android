<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/mScrollView" 
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content" 
    android:scrollbars="vertical" >

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout 
        android:id = "@+id/clientLayout"
        android:layout_marginTop="5dip" 
		android:layout_width="match_parent" 		
		android:layout_height="wrap_content" 
		android:orientation="vertical">
	    <TextView 
	        android:id = "@+id/clientText"
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"
	        android:text="手机扮演客户端："/>	        
	    <RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			   
			<Button android:id="@+id/connectButton"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 				
				android:layout_alignParentRight = "true"
				android:text="开始连接"/>
			<EditText
		         android:layout_width="fill_parent"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "请输入IP地址"		      	 
		      	 android:layout_alignParentLeft = "true"
		      	 android:layout_toLeftOf="@+id/connectButton" 
		      	 android:id = "@+id/ipText"/>
		</RelativeLayout> 		
		
		<RelativeLayout 
	        android:id = "@+id/sendLayout"
	        android:layout_below="@+id/connectLayout"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			   
			<Button android:id="@+id/searchData"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="查询数据"/>

			<Button
			    android:id="@+id/changeData"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:text="修改数据" />

			<Button
			    android:id="@+id/sendData"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:layout_centerHorizontal="true"
			    android:text="发    送" />
			
		</RelativeLayout>
	</RelativeLayout> 

	<TextView
			android:id="@+id/recvMsg"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom = "true"
			android:textSize="15sp"
			android:text="信息：\n"/>
</LinearLayout>
</ScrollView>