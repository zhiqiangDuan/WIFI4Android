<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	    <RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
			    android:id="@+id/Text1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:hint="24~120                  " />

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/text1"
			    android:text="最大允许电流(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "24~120                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text2"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text2"
			    android:text="过压退出电压(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "24~120                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text3"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text3"
			    android:text="最小工作电压(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "24~120                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text4"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text4"
			    android:text="电池欠压电压(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "1~3                        "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text5"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text5"
			    android:text="电池欠压回差(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/radioGroup1"
			    android:text="软欠压保护使能(V)"
			    android:textSize="20sp" />

			 <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:text="使能" />
                <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/radioGroup2"
                android:checked="true"
                android:text="无效" />

            </RadioGroup>

		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "1~3                        "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text7"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text7"
			    android:text="软欠压回差(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
		<RelativeLayout 
	        android:id = "@+id/connectLayout"
	        android:layout_below="@+id/clientText"
			android:layout_width="match_parent" 		
			android:layout_height="wrap_content" 
			android:orientation="horizontal">		   
			  
			<EditText
		         android:layout_width="wrap_content"
		      	 android:layout_height = "wrap_content" 	
		      	 android:hint = "24~120                  "	
		      	 android:layout_alignParentRight = "true"	      	 
		      	 android:id = "@+id/Text7"/>

			<TextView
			    android:id="@+id/clientText"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/Text7"
			    android:text="软欠压电压(V)"
			    android:textSize="20sp" />
		</RelativeLayout>
	   <Button android:id="@+id/butOK"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:text="确定"/>
	</LinearLayout>
</LinearLayout>
